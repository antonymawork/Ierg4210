datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  categoryID      Int      @id @default(autoincrement())
  categorySlug    String   @unique
  categoryName    String
  categoryImagePath String
  products        Product[]
}

model Product {
  productID         Int     @id @default(autoincrement())
  productSlug       String  @unique
  categoryID        Int
  productName       String
  productPrice      Float
  productInventory  Int
  productDescription String
  productImagePath  String
  category          Category @relation(fields: [categoryID], references: [categoryID])
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  username String
  isAdmin  Boolean @default(false)
  orders   Order[]
}

model Order {
  id           String   @id
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
  invoice_id   String   // Unique UUID for each order
  custom_id    String   // Store the generated digest here
  orderDetails String?  // JSON string of the order details, may be null if not approved
  amount       String   // Combines total and currency, formatted as "100.00 USD"
  status       String   @default("CREATED") // e.g., CREATED, COMPLETED, CANCELLED
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  items        String   // Store JSON as a stringified format
}